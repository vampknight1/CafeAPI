@model Menus

@{
    ViewData["Title"] = "Edit";
    string imagesPath = "/upload/images/" + (Model.MenuImg ?? "noimages.png");
}

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <div class="panel">
                <div class="panel-heading"><h3>Photos Menu</h3></div>
                <div class="panel-body">
                    <table class="table table-responsive">
                        <tr>
                            <td>
                                <img src="@imagesPath" alt="@Model.MenuName" width="250" height="350" />
                                <input hidden asp-for="MenuImg" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="input-group fileupload-v1">
                                    <input asp-for="MenuImg" type="file" name="uploadFile" class="fileupload-v1-file hidden" />
                                    <input type="text" class="form-control fileupload-v1-path" placeholder="File Path..." disabled>
                                    <button class="btn fileupload-v1-btn" type="button"><i class="fa fa-folder"></i> Choose File</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel">
            <div class="panel-heading"><h3>Detail Menu</h3></div>
            <div class="panel-body">
                <input asp-for="ID" type="hidden" />
                <input asp-for="created_at" type="hidden" />
                <input asp-for="updated_at" type="hidden" />

                <div class="form-group">
                    <label asp-for="MenuName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MenuName" class="form-control" />
                        <span asp-validation-for="MenuName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="Category" class="form-control android" asp-items="@ViewBag.Category"></select>
                        <span asp-validation-for="Category" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MenuPrice" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MenuPrice" class="form-control" />
                        <span asp-validation-for="MenuPrice" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MenuStock" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MenuStock" class="form-control" />
                        <span asp-validation-for="MenuStock" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MenuDesc" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MenuDesc" class="form-control" />
                        <span asp-validation-for="MenuDesc" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MenuType" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MenuType" class="form-control" />
                        <span asp-validation-for="MenuType" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $(document).ready(function () {
        $('#uploadFile').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('#uploadFile').html(fileName);
        });
    });
</script>
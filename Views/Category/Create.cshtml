@model Category

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create" id="myForm">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CategoryName" class="control-label form-text col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryName" class="form-control android" required />
                <span asp-validation-for="CategoryName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryDesc" class="control-label form-text col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryDesc" class="form-control android" required />
                <span asp-validation-for="CategoryDesc" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn ripple-infinite btn-raised btn-success" />
            </div>
        </div>
    </div>
</form>


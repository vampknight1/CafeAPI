@model  Category

@{
    //Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit" id="myForm">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ID" type="hidden" />

        <div class="form-group">
            <label asp-for="CategoryName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategoryName" class="form-control android" />
                <span asp-validation-for="CategoryName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">    
            <label asp-for="CategoryDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategoryDesc" class="form-control android" />
                <span asp-validation-for="CategoryDesc" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn ripple-infinite btn-raised btn-success" />
            </div>
        </div>
    </div>
</form>

